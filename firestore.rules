service cloud.firestore {
  function write() {
    return request.auth.token.role == 'write'
  }

  function read() {
    return request.auth.token.role == 'read'
  }

  function readOrWrite() {
    return write() || read()
  }

  match /databases/{database}/documents {

    match /settings/{setting} {
      allow read: if true
      allow write, delete: if write()
    }

    match /products-en/{product} {
  	  allow read: if readOrWrite() || resource.data.active == true;
  	  allow write, delete: if write()
    }

    match /categories-en/{category} {
      allow read: if true
      allow write, delete: if write()
    }

    match /news-en/{new} {
      allow read: if true
      allow write, delete: if write()
    }

    match /discounts-en/{discount} {
      allow read: if true
      allow write, delete: if write()
    }

    match /orders/{order} {
    	allow create: if true;
      allow read: if readOrWrite() || resource.data.customerId == request.auth.uid;
      allow update, delete: if write() || resource.data.customerId == request.auth.uid;
    }

    match /customers/{customer} {
      allow read, create: if true;
      allow update, delete: if write() || resource.id == request.auth.uid;
    }

    match /reviews/{review} {
      allow read: if true
      allow write, delete: if resource.data.customerId == request.auth.uid;
    }

    match /newsletter/{newsletter} {
      allow read, delete: if readOrWrite()
      allow write: if true
    }

    match /landing-page-en/{page} {
      allow write, delete: if readOrWrite()
      allow read: if true
    }

    match /contacts/{contact} {
      allow create: if true;
      allow read: if readOrWrite();
      allow write, delete: if write();
    }
  }
}
